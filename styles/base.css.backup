        /* ðŸŽ† EFECTOS DE RECOMPENSA */
        .reward-bubble {
            position: fixed;
            width: 60px;
            height: 60px;
            border-radius: 50%;
            background: radial-gradient(circle at 30% 30%, rgba(255,255,255,0.8), rgba(100,200,255,0.6));
